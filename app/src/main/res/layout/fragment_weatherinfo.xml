<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@android:color/darker_gray"
android:orientation="vertical">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="200dp"></FrameLayout>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/weather_local"
        app:layout_anchor="@id/head"
        app:layout_anchorGravity="bottom|center"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

<LinearLayout
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <com.example.nemo1.weather21.custom.CustomTextView
            android:text="Feel C"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <com.example.nemo1.weather21.custom.CustomTextView
            android:id="@+id/feel_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <com.example.nemo1.weather21.custom.CustomTextView
            android:text="Wind"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <com.example.nemo1.weather21.custom.CustomTextView
            android:id="@+id/wind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <com.example.nemo1.weather21.custom.CustomTextView
            android:text="pressure"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <com.example.nemo1.weather21.custom.CustomTextView
            android:id="@+id/pressure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <com.example.nemo1.weather21.custom.CustomTextView
            android:text="Average visibility"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <com.example.nemo1.weather21.custom.CustomTextView
            android:id="@+id/vis_km"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>